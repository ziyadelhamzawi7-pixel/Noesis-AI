# AI API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Google API (Optional - for cloud integration in later milestones)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Access Control (leave empty to disable password protection)
ACCESS_PASSWORD=

# Application Settings
SECURITY_LEVEL=local_only  # Options: local_only, cloud_enabled
MAX_COST_PER_DATA_ROOM=15.0  # Maximum API cost before requiring confirmation
MONTHLY_BUDGET_ALERT=45.0  # Alert when approaching monthly budget

# Database
DATABASE_PATH=.tmp/due_diligence.db
CHROMA_DB_PATH=.tmp/chroma_db

# Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022  # Main analysis model
CLAUDE_HAIKU_MODEL=claude-3-5-haiku-20241022  # For classification
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Processing Settings
MAX_CHUNK_SIZE=800
CHUNK_OVERLAP=100
BATCH_SIZE=100
MAX_FILE_SIZE_MB=100
